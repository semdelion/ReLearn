<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android			="http://schemas.android.com/apk/res/android"
	xmlns:local				="http://schemas.android.com/apk/res-auto"
	xmlns:tools				="http://schemas.android.com/tools"
	android:id				="@+id/linearLayout1"
    android:orientation		="vertical"
    android:layout_width	="match_parent"
    android:layout_height	="match_parent"> 
	<com.google.android.material.appbar.AppBarLayout
		android:layout_width  ="match_parent"
		android:layout_height ="wrap_content">
		<androidx.appcompat.widget.Toolbar		
			android:id				="@+id/toolbar_languages_repeat"
			android:theme			="@style/ToolbarStyle"	
			android:background		="@drawable/background_toolbar"
			local:navigationIcon	="@drawable/ic_arrow_back"
			android:layout_width	="match_parent"
       		android:layout_height	="@dimen/toolbar_height"	
			local:buttonGravity		="bottom">
			<TextView
				local:MvxBind			="Text TitleCount"
				tools:text				="Count 1/10"
				android:textColor		="@color/text_white"
				android:gravity			="bottom"
				android:paddingBottom	="12dp"
				android:layout_width	="match_parent"
				android:layout_height	="match_parent"
			/>
		</androidx.appcompat.widget.Toolbar>
	</com.google.android.material.appbar.AppBarLayout>
	<RelativeLayout
		android:layout_width		="match_parent"
		android:layout_height		="match_parent">
		<TextView
			local:MvxBind				    ="Text Text"
			android:id						="@+id/textView_Eng_Word"
			android:textColor				="@color/text_white"
			tools:text					    ="Word"
			android:textSize				="30dp"
			android:textStyle				="bold"
			android:layout_width			="match_parent"
			android:layout_height			="match_parent"
			android:layout_marginTop		="10.0dp"
			android:layout_marginRight		="10.0dp"
			android:layout_marginLeft		="10.0dp"
			android:gravity					="center_horizontal|center"
			android:layout_marginBottom		="310dp"
			android:layout_alignParentBottom="true"
		/>
		<RelativeLayout
			android:layout_width		="match_parent"
			android:layout_height		="match_parent"
			android:layout_marginRight	="@dimen/margin_right"
			android:layout_marginLeft	="@dimen/margin_left">
			<Button
				android:onClick					="Button_Languages_1_Click"
				android:id						="@+id/button_Languages_choice1"
				android:background				="@drawable/button_style_standard"
				android:textColor				="@color/text_white"
				android:textAllCaps				="false"
				android:textSize				="18dp"
				android:layout_width			="match_parent"
				android:layout_height			="@dimen/button_height"
				android:layout_marginBottom		="250dp"
				android:layout_alignParentBottom="true"/>
			<Button
				android:onClick					="Button_Languages_2_Click"
				android:id						="@+id/button_Languages_choice2"
				android:background				="@drawable/button_style_standard"
				android:textColor				="@color/text_white"
				android:textAllCaps				="false"
				android:textSize				="18dp"
				android:layout_width			="match_parent"
				android:layout_height			="@dimen/button_height"
				android:layout_marginBottom		="190dp"
				android:layout_alignParentBottom="true"/>
			<Button
				android:onClick					="Button_Languages_3_Click"
				android:id						="@+id/button_Languages_choice3"
				android:background				="@drawable/button_style_standard"
				android:textColor				="@color/text_white"
				android:textAllCaps				="false"
				android:textSize				="18dp"
				android:layout_width			="match_parent"
				android:layout_height			="@dimen/button_height"
				android:layout_marginBottom		="130dp"
				android:layout_alignParentBottom="true"/>
			<Button
				android:onClick					="Button_Languages_4_Click"
				android:id						="@+id/button_Languages_choice4"
				android:background				="@drawable/button_style_standard"  
				android:textColor				="@color/text_white"
				android:textAllCaps				="false"
				android:textSize				="18dp"
				android:layout_width			="match_parent"
				android:layout_height			="@dimen/button_height"
				android:layout_marginBottom		="70dp"
				android:layout_alignParentBottom="true"/>
			<ImageButton
				android:onClick					="Button_Speak_Languages_Click"
				android:id						="@+id/Button_Speak_Languages"
				android:background				="@drawable/button_style_standard"
				android:src						="@drawable/speak_on"
				android:layout_width			="55dp"
				android:layout_height			="@dimen/button_height"
				android:layout_gravity			="left|right|center"
				android:gravity					="left|right|center"
				android:scaleType				="fitXY"
				android:layout_marginBottom		="10dp"
				android:layout_alignParentBottom="true"
			/>
			<Button
                local:MvxBind                   ="Text TextNext"
				android:onClick					="Button_Languages_Next_Click"
				android:id						="@+id/button_Languages_Next"	
				android:background				="@drawable/button_style_standard"
				tools:text					    ="Unknown"
				android:fontFamily				="@font/myriadpro_semibold"
				android:textColor				="@color/text_white"
				android:layout_toRightOf		="@+id/Button_Speak_Languages"
				android:textSize				="20dp"
				android:layout_width			="match_parent"
				android:layout_height			="@dimen/button_height"
				android:gravity					="center"
				android:enabled					="false"
				android:layout_marginLeft		="25.0dp"
				android:layout_marginBottom		="10dp"
				android:layout_alignParentBottom="true"
			/>
		</RelativeLayout>
   </RelativeLayout>
</LinearLayout>

			